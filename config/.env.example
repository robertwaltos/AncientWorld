# Environment Configuration Template

# API Keys
EUROPEANA_API_KEY=your_europeana_key_here
WIKIMEDIA_USER_AGENT=AncientWorld/0.1.0 (https://github.com/robertwaltos/AncientWorld)

# Database
DATABASE_URL=sqlite:///data/ancientworld.db
# For PostgreSQL: postgresql://user:password@localhost:5432/ancientworld

# Crawling Configuration
DOWNLOAD_DELAY=1.0
CONCURRENT_REQUESTS_PER_DOMAIN=2
IMAGES_STORE=data/raw
CACHE_DIR=data/cache
MAX_RETRIES=3

# Image Quality Filters
MIN_IMAGE_WIDTH=800
MIN_IMAGE_HEIGHT=800

# Analysis Configuration
MIN_CIRCLE_RADIUS=10
MAX_CIRCLE_RADIUS=500
CIRCLE_THRESHOLD=0.5
LINE_THRESHOLD=100

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs

# Storage
DATA_DIR=data
PROCESSED_DIR=data/processed
RESULTS_DIR=data/results

# Security (for production)
SECRET_KEY=change_this_to_a_random_secret_key
ALLOWED_HOSTS=localhost,127.0.0.1
